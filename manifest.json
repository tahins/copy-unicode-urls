{
  "manifest_version": 2,

  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "homepage_url": "https://github.com/tahins/copy-unicode-urls",
  "default_locale": "en",
  "version": "0.0.1",
  "icons": {
    "128": "icons/u-red-128.png"
  },
  "author": "tahin.36+improved-url-copy@gmail.com",

  "permissions": [
    "activeTab", 
    "contextMenus", 
    "storage"
  ],

  "background": {
    "persistent": true,
    "page": "./bg.html"
  },

  "options_page": "./pages/options/index.html",
  "options_ui": {
    "chrome_style": true,
    "page": "./pages/options/index.html"
  },

  "browser_action": {
    "default_title": "__MSG_iconHint__",
    "default_icon": "./icons/u-red-128.png",
    "default_popup": "./pages/popup/index.html"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+Shift+C",
        "mac": "Command+Shift+C",
        "chromeos": "Alt+Shift+C",
        "linux": "Alt+Shift+C"
      }
    }
  }
}
